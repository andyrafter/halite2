# top-most EditorConfig file
root = true

[*]
# Always insert a blank newline at end of files
insert_final_newline = true

[*.{c,cc,cpp,h,hpp}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
end_of_line = crlf

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
